<?xml version="1.0" encoding="utf-8"?>
<!-- http://tips.androidhive.info/2013/09/android-layout-rounded-corner-border/ -->

<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
 
    <!-- view background pref_color -->
    <solid
        android:color="@color/contextmenu_bg_color" >
    </solid>
 
    <!-- view border pref_color and width -->
    <stroke
        android:width="1dp"
        android:color="#000" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>
 
    <!-- Here is the corner radius -->
    <corners
        android:radius="5dp"   >
    </corners> 
</shape>